---
import SkillItem from "./SkillItem.astro";

import AngularIcon from "./icons/Angular.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import TypeScriptIcon from "./icons/TypeScript.astro";
import KotlinIcon from "./icons/Kotlin.astro";


import CSIcon from "./icons/CS.astro";
import AspNetIcon from "./icons/AspNet.astro";
import MySqlIcon from "./icons/MySql.astro";
import JavaIcon from "./icons/Java.astro";

const FRONTEND = [
    { icon: HTMLIcon, title: "HTML" },
    { icon: CSSIcon, title: "CSS" },
    { icon: JavaScriptIcon, title: "JavaScript" },
    { icon: TypeScriptIcon, title: "TypeScript" },
    { icon: AngularIcon, title: "Angular" },
    { icon: KotlinIcon, title: "Kotlin" },

];

const BACKEND = [
    { icon: CSIcon, title: "C#" },
    { icon: AspNetIcon, title: "ASP.NET" },
    { icon: JavaIcon, title: "Java" },
    { icon: MySqlIcon, title: "MySQL" },
];

---

<div class="skills-container">
    <div class="skills-section">
        <h1
            class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white text-center"
        >
            Frontend
        </h1>

        <ul class="skills-list">
            {
                FRONTEND.map((skill) => (
                    <SkillItem icon={skill.icon} title={skill.title} />
                ))
            }
        </ul>
    </div>

    <div class="skills-section">
        <h1
            class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white text-center"
        >
            Backend
        </h1>
        <ul class="skills-list">
            {
                BACKEND.map((skill) => (
                    <SkillItem icon={skill.icon} title={skill.title} />
                ))
            }
        </ul>
    </div>
</div>

<style>
    .skills-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
    }

    .skills-section {
        width: 100%;
        max-width: 800px;
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;

        margin-top: 5%;
    }


    @media (min-width: 1100px) {
        .skills-container {
            flex-direction: row;
            justify-content: space-around;
        }

        .skills-section {
            width: 45%;
        }
    }
</style>
